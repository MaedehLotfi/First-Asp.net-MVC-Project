@model SoulHealth.Models.APhysical

@{
    ViewBag.Title = "APhysical";
    Layout = "~/Views/Shared/_admin.cshtml";
}
<div id="Container">
    <h2>فعالیت های فیزیکی</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 style="color:red">لطفا یک سطح فعالیت فیزیکی را برای کاربر با شماره پرونده مشخص انتخاب کنید</h4>

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="form-group">
                @Html.LabelFor(model => model.PhId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Level1, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Level1)
                        @Html.ValidationMessageFor(model => model.Level1, "", new { @class = "text-danger" })
                        <p>پیاده روی سریع 30 دقیقه هفته ای سه بار</p>
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Level2, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Level2)
                        @Html.ValidationMessageFor(model => model.Level2, "", new { @class = "text-danger" })
                        <p>پیاده روی سریع روزانه حداقل 45 دقیقه</p>

                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Level3, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Level3)
                        @Html.ValidationMessageFor(model => model.Level3, "", new { @class = "text-danger" })
                        <p>انجام فعالیت های هوازی سبک بصورت روزانه (سه الی چهار بار در روز) مانند: دو، نرمش، کار با وزنه، آمادگی جسمانی و...</p>
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Level4, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Level4)
                        @Html.ValidationMessageFor(model => model.Level4, "", new { @class = "text-danger" })
                        <p>انجام فعالیت های ورزشی بصورت روزانه (سه الی چهار بار در روز) مانند: دوچرخه سواری، دو، کوهنوردی، تردمیل، بدنسازی، آمادگی جسمانی و...</p>
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PhysicalDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhysicalDescription, new { htmlAttributes = new { @class = "form-control " } })
                    @Html.ValidationMessageFor(model => model.PhysicalDescription, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="ذخیره" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("بازگشت به لیست فعالیت های فیزیکی", "APhysicalList")

    </div>
</div>

<style>

    .div {
        width: 30%;
        /*margin: 5px;*/
    }

    * {
        font-family: 'iransansweb';
    }

    #Container {
        padding: 10px;
    }
</style>

<style type="text/css">

    @@font-face {
        font-family: 'iransansweb';
        src: url('../../fonts/farsi/iransansweb.ttf') format('truetype');
    }
</style>